<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/PayHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Pay Here"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cardicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/cardicon" />

    <EditText
        android:id="@+id/etCardHolderName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Card Holder Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etCardNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter card Number"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etExpireMonth"
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:ems="10"
            android:hint="MM"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etExpireYear"
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp"
            android:ems="10"
            android:hint="YY"
            android:inputType="textPersonName" />

    </LinearLayout>

    <EditText
        android:id="@+id/etCvv"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="CVV"
        android:inputType="textPersonName" />

    <!--    <Button-->
    <!--        android:id="@+id/btnSavePayment"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="26dp"-->
    <!--        android:background="#288FE1"-->
    <!--        android:text="Click Here"-->
    <!--        android:textColor="#ffffff"-->
    <!--        android:textSize="16sp"-->
    <!--        android:textStyle="bold" />-->

    <Button
        android:id="@+id/btnSavePayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#2196F3"
        android:text="Click Here"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:cornerRadius="20dp" />


</LinearLayout>